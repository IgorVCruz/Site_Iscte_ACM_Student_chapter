<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
	version="2.3">


	<navigation-rule>	<!-- Base.xhtml rules -->
		<from-view-id>base.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule><!-- registration.xhtml rules -->
		<from-view-id>registration.xhtml</from-view-id>
		
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>login.xhtml</to-view-id>
			<redirect/>
		</navigation-case>

		<navigation-case>
			<from-outcome>landpage</from-outcome>
			<to-view-id>landpage.xhtml</to-view-id>
			<redirect/>
		</navigation-case>

    <!--<navigation-case>
            <from-action>#{registration.teste()}</from-action>
            <from-outcome>landpage</from-outcome>
            <to-view-id>landpage.xhtml</to-view-id>
            <redirect />
        </navigation-case> -->
        
    </navigation-rule>




	<navigation-rule><!-- login.xhtml rules -->
		<from-view-id>login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>registration</from-outcome>
			<to-view-id>registration.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>base.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>


</faces-config>
